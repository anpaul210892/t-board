<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_item_height" >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:paddingLeft="@dimen/drawer_left"
        android:src="@drawable/account_image" />

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:paddingLeft="80dp"
        android:paddingRight="@dimen/drawer_right"
        android:text="profile"
        android:textColor="@color/text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/item_text"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/drawer_right"
        android:background="@color/color_light_blue_100"
        android:padding="3dp"
        android:text="21"
        android:textColor="@color/Gray"
        android:textStyle="bold"
        android:visibility="visible" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/drawer_right"
        android:visibility="visible" />

</RelativeLayout>